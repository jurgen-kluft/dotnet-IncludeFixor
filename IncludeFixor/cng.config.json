{
  "settings": {
    "log": true,
    "path-separator": "/",
    "dry-run": true,
    "verbose": true
  },
  "includes": [
    {
      "name": "cng_root",
      "scanner_path": "source\\main\\",
      "include_path": "source\\main\\include\\",
      "extensions": [ "*.h", "*.H", "*.hpp", "*.HPP", "*.inl" ],
      "readonly": false
    }
  ],
  "sources": [
    {
      "name": "cng_sources",
      "scanner_path": "source\\main\\cpp\\",
      "extensions": [ "*.c", "*.C", "*.cpp", "*.CPP", "*.mm" ]
    }
  ]
}
